<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="screensaver.pingpong"
  version="19.0.0"
  name="Ping Pong"
  provider-name="Team Kodi">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="xbmc.ui.screensaver"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <platform>@PLATFORM@</platform>
    <license>GPL-2.0-or-later</license>
    <source>https://github.com/xbmc/screensaver.pingpong</source>
    <assets>
      <icon>resources/icon.png</icon>
    </assets>
    <summary lang="da_DK">Ping Pong pauseskærm</summary>
    <summary lang="de_DE">Ping Pong Bildschirmschoner</summary>
    <summary lang="en_GB">Ping Pong screensaver</summary>
    <description lang="da_DK">Lad en bold springe frem og tilbage.</description>
    <description lang="de_DE">Lässt einen Ball hin und her springen.</description>
    <description lang="en_GB">Lets a ball jump back and forth.</description>
  </extension>
</addon>
